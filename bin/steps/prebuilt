$(wget -O - http://gfortran.com/download/x86_64/gfortran-fetch-and-install.sh) | sh
#wget -O - http://gfortran.com/download/x86_64/gfortran-fetch-and-install.sh | sh -

wget http://www.netlib.org/blas/blas.tgz
tar xzf blas.tgz
cd BLAS

gfortran -O3 -std=legacy -m64 -fno-second-underscore -fPIC -c *.f

ar r libfblas.a *.o
ranlib libfblas.a
rm -rf *.o
export BLAS=$(pwd -P)/libfblas.a

cd ..

pip install --upgrade pip
pip install numpy
pip install scipy
